/* pages/order/detail/detail.wxss */
page {
  background: #f8f8f8;
}

.card-fetch {
  width: 40px;
  background: var(--main-bg-color);
  height: 100px;
  font-size: 14px;
  color: white;
}

.card-box {
  display: flex;
  width: 80%;
  height: 100px;
  background: #fef9f4;
}

.card-left-bar {
  width: 14px;
  padding: 20px 14px;
}

.order-info {
  background: white;
  margin-top: 10px;
}

.order-info-title {
  font-size: 12px;
  color: #d1d1d1;
  padding: 12px;
  border-bottom: 1px #e3e3e3 solid;
}

.order-sum {
  height: 30px;
  padding: 5px 15px;
  font-size: 14px;
}

.order-sum-number {
  font-size: 14px;
  float: right;
}

.list-info {
  width: 50%;
  padding: 5px 15px;
}

.list-info-size {
  font-size: 12px;
  color: #b1b1b1;
}

.activity-color {
  color: #e53085;
}

.cart-list-box {
  background: #ffffff;
  display: flex;
  font-size: 15px;
  border-bottom: 1px #e3e3e3 solid;
}

.note-exchange {
  padding: 3px 5px;
  border: 1px solid #e53085;
  color: #e53085;
  font-size: 16px;
}

.order-info-li {
  color: black;
  margin-left: 10px;
}

.note-card {
  margin-left: 20px;
  color: #a2a1a0;
  font-size: 12px;
  margin-top: 15px;
}

.statu-card {
  font-size: 12px;
  color: #e53085;
}

.number-card {
  font-size: 28px;
  padding: 0px 20px;
}

.go-top-10 {
  margin-top: 10px;
}

.order-cut {
  height: 30px;
  padding: 5px 15px;
  border-bottom: 1px #e3e3e3 solid;
}

.order-cut-dec {
  background: #f07474;
  font-size: 13px;
  color: white;
  padding: 2px;
}

.order-cut-note {
  margin-left: 3px;
  font-size: 14px;
}

.order-cut-number {
  font-size: 14px;
  float: right;
}